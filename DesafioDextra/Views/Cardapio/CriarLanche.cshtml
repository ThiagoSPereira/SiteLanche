@model IEnumerable<DesafioDextraData.Model.Ingrediente>
@{
    ViewBag.Title = "CriarLanche";
}

<div class="row">
    <div class="col-xs-6">
        <h2>Criar Lanche</h2>
    </div>
    @*<div class="col-xs-6">
        <div class="preco-lanche">Preço Lanche: <span id="preco"></span> </div>
    </div>*@
</div>

<div class="row">
    <div class="col-lg-4 col-xs-6">
        @foreach (var ingrediente in Model)
    {
        <div class="ingrediente">
            <p>@ingrediente.Nome - @ingrediente.Valor <button class="btn btn-default direita" data-ingredienteId="@ingrediente.IngredienteId" data-nome="@ingrediente.Nome" onclick="adicionar(this)">Adicionar</button></p>
        </div>
}

        <div class="row">
            <div class="div-comprar col-md-4">
                <button class="btn btn-primary" onclick="comprar()">Comprar</button>
            </div>
            <div class="col-md-8">
                <div class="preco-lanche">Preço Lanche: <span id="preco"></span> </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-xs-6">
        <table class="table" id="tabela-pedido">
            <thead>
                <tr>
                    <th>Ingredientes</th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>





@section scripts {

    <script type="text/javascript" src="~/Scripts/criar-lanches.js">

    </script>
}
